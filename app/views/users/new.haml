%h1 Sign up as a new user
- @user.password = @user.password_confirmation = nil

= error_messages_for :user
- form_for @user do |f|  
  %ol
    %li
      = f.label :login
      = f.text_field :login     
  
    %li
      = f.label :email
      = f.text_field :email     
  
    %li
      = f.label :password
      = f.password_field :password 

    %li
      = f.label :password_confirmation
      = f.password_field :password_confirmation 
   
  = submit_tag 'Sign up'
